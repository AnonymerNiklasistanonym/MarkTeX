{
  "name": "marktex",
  "version": "1.0.1",
  "private": true,
  "description": "Web service for files that support advanced Markdown commands mixed with LaTeX sections.",
  "keywords": [
    "typescript",
    "express",
    "socket-io",
    "sqlite3",
    "markdown",
    "latex",
    "pandoc",
    "inkscape",
    "nodejs",
    "webpack",
    "markdown-it",
    "docker",
    "mocha-chai"
  ],
  "homepage": "https://github.com/AnonymerNiklasistanonym/MarkTeX",
  "bugs": {
    "url": "https://github.com/AnonymerNiklasistanonym/MarkTeX/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AnonymerNiklasistanonym/MarkTeX.git"
  },
  "license": "MIT",
  "author": {
    "name": "AnonymerNiklasistanonym",
    "url": "https://github.com/AnonymerNiklasistanonym"
  },
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "npm-run-all build:backend build:frontend copy:assets",
    "build:backend": "npm-run-all tsc",
    "build:frontend": "npm-run-all webpack",
    "clean": "ts-node tools/cleanFiles",
    "copy:assets": "ts-node tools/copyAssets",
    "coverage": "nyc npm run test",
    "coverage:html": "nyc --reporter html npm run test",
    "coverage:html:view": "ts-node ./tests/openCoverage",
    "dev": "cross-env NODE_DEBUG=app* NODE_ENV=development npm-run-all build start",
    "dev:watch": "nodemon --watch src -e ts,hbs,css,json --exec npm run dev",
    "dev:watch:styles": "nodemon --watch src -e ts,hbs,css,json --exec npm-run-all copy:assets start",
    "docs": "npm-run-all lint:docs todo typedoc",
    "docs:watch": "nodemon --watch src -e ts --exec npm-run-all docs",
    "docs:view": "ts-node ./docs/openDocs",
    "lint": "npm-run-all lint:backend lint:docs lint:frontend lint:tests",
    "lint:backend": "eslint -c .eslintrc.js --ext .ts src tools webpack.config.js --fix",
    "lint:docs": "eslint -c .eslintrc.js --ext .ts docs --fix",
    "lint:frontend": "eslint -c .eslintrc.js --ext .ts src/public tools webpack.config.js --fix",
    "lint:tests": "eslint -c .eslintrc.js --ext .ts tests --fix",
    "start": "node .",
    "test": "mocha --exit -r ts-node/register tests/**/*.test*.ts",
    "tests:general": "mocha --exit -r ts-node/register tests/**/*.test.ts",
    "tests:shell": "mocha --exit -r ts-node/register tests/**/*.test.shell.ts",
    "todo": "ts-node ./docs/createTodoPage",
    "tsc": "tsc",
    "typedoc": "ts-node ./docs/createDocs",
    "vscodeTypeIntegration": "ts-node ./types/copyToNodeModules",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "archiver": "^5.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "4.17.1",
    "express-handlebars": "^5.1.0",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.1",
    "github-markdown-css": "^4.0.0",
    "handlebars": "^4.7.6",
    "highlight.js": "^10.4.1",
    "http-errors": "^1.8.0",
    "js-yaml": "^3.14.0",
    "katex": "^0.12.0",
    "markdown-it": "^11.0.0",
    "mousetrap": "^1.6.5",
    "socket.io": "^2.4.0",
    "socket.io-client": "^2.3.0",
    "spdy": "^4.0.2",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@types/archiver": "^3.1.0",
    "@types/chai": "^4.2.12",
    "@types/compression": "^1.7.0",
    "@types/compression-webpack-plugin": "^4.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/express-handlebars": "^3.1.0",
    "@types/express-session": "^1.17.0",
    "@types/highlight.js": "^9.12.4",
    "@types/http-errors": "^1.8.0",
    "@types/js-yaml": "^3.12.5",
    "@types/katex": "^0.11.0",
    "@types/linkify-it": "^2.1.0",
    "@types/mocha": "^8.0.1",
    "@types/mousetrap": "^1.6.3",
    "@types/shelljs": "^0.8.8",
    "@types/socket.io": "^2.1.10",
    "@types/socket.io-client": "^1.4.33",
    "@types/spdy": "^3.4.4",
    "@types/sqlite3": "^3.1.6",
    "@types/webpack": "^4.41.21",
    "@typescript-eslint/eslint-plugin": "3.8.0",
    "@typescript-eslint/eslint-plugin-tslint": "3.8.0",
    "@typescript-eslint/parser": "3.8.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "compression-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.6.0",
    "eslint-plugin-jsdoc": "^30.2.1",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "glob": "^7.1.6",
    "leasot": "^11.1.0",
    "mocha": "^8.1.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open": "^7.1.0",
    "raw-loader": "^4.0.1",
    "shelljs": "^0.8.4",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.10.2",
    "tslint": "^5.0.0",
    "typedoc": "^0.17.8",
    "typescript": "3.9.7",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12"
  },
  "pkg": {
    "assets": [
      "dist/**/*",
      "keys/**/*",
      ".env"
    ]
  }
}
