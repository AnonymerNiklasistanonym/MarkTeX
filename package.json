{
  "name": "typescript_express",
  "version": "1.0.0",
  "description": "Express server written in Nodejs and TypeScript.",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm-run-all clean lint tsc webpack copy-assets",
    "clean": "ts-node tools/cleanFiles",
    "copy-assets": "ts-node tools/copyAssets",
    "dev:start": "cross-env NODE_DEBUG=app* NODE_ENV=development npm-run-all build start",
    "dev": "nodemon --watch src -e ts,hbs,css --exec npm run dev:start",
    "docs": "npm-run-all lint:docs todo typedoc",
    "docs:view": "ts-node ./docs/openDocs",
    "lint:docs": "eslint -c .eslintrc.js --ext .ts docs --fix",
    "lint:tests": "eslint -c .eslintrc.js --ext .ts tests --fix",
    "lint:frontend": "eslint -c .eslintrc.js --ext .ts src/public tools webpack.config.js --fix",
    "lint": "eslint -c .eslintrc.js --ext .ts src tools webpack.config.js --fix",
    "mocha": "mocha -r ts-node/register tests/**/*.test.ts tests/**/*.test.shell.ts",
    "mochaNoShell": "mocha -r ts-node/register tests/**/*.test.ts",
    "mochaShell": "mocha -r ts-node/register tests/**/*.test.shell.ts",
    "vscodeTypeIntegration": "ts-node ./types/copyToNodeModules",
    "start": "node .",
    "test": "npm-run-all lint:tests mocha",
    "todo": "ts-node ./docs/createTodoPage",
    "tsc": "tsc",
    "typedoc": "ts-node ./docs/createDocs",
    "webpack": "webpack --config webpack.config.js",
    "dev:webpack": "cross-env NODE_ENV=development nodemon --watch src/public -e ts,css --exec npm-run-all lint:frontend webpack copy-assets"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "archiver": "^3.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "express-session": "^1.17.0",
    "express-validator": "^6.4.0",
    "github-markdown-css": "^4.0.0",
    "handlebars": "^4.7.3",
    "highlight.js": "^9.18.1",
    "http-errors": "^1.7.3",
    "js-yaml": "^3.13.1",
    "katex": "^0.11.1",
    "markdown-it": "^10.0.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "@types/archiver": "^3.1.0",
    "@types/chai": "^4.2.11",
    "@types/compression-webpack-plugin": "^2.0.1",
    "@types/express": "^4.17.3",
    "@types/express-handlebars": "^3.1.0",
    "@types/express-session": "^1.17.0",
    "@types/highlight.js": "^9.12.3",
    "@types/http-errors": "^1.6.3",
    "@types/js-yaml": "^3.12.2",
    "@types/katex": "^0.11.0",
    "@types/linkify-it": "^2.1.0",
    "@types/mocha": "^7.0.2",
    "@types/shelljs": "^0.8.7",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/sqlite3": "^3.1.6",
    "@types/webpack": "^4.41.8",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "chai": "^4.2.0",
    "compression-webpack-plugin": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-jsdoc": "^22.1.0",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "glob": "^7.1.6",
    "leasot": "^10.1.0",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "open": "^7.0.3",
    "shelljs": "^0.8.3",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "tslint": "^5.0.0",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  }
}
