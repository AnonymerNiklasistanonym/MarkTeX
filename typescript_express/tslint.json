{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "trailing-comma": false,
        "max-line-length": {
            "options": 120
        },
        "semicolon": true,
        "no-irregular-whitespace": true,
        "no-trailing-whitespace": true,
        "encoding": true,
        "linebreak-style": [true, "LF"],
        "indent": [true, "spaces", 4]
    },
    "rulesDirectory": []
}
