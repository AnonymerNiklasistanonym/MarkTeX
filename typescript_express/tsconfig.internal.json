{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2016",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": false,
        "strict": true,
        "strictNullChecks": true
    },
    "include": [
        "tools/**/*.ts",
        "docs/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
